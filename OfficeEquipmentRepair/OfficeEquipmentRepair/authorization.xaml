<Window x:Class="OfficeEquipmentRepair.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OfficeEquipmentRepair"
        mc:Ignorable="d"
        Title="Авторизация" Height="400" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Content="Авторизация" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        
        <Label Grid.Row="1" Height="30" Width="200" Content="Логин" Margin="0,0,0,50"/>
        <TextBox x:Name="login" Grid.Row="1" Height="30" Width="200" VerticalContentAlignment="Center"/>
        
        <Label Grid.Row="2" Height="30" Width="200" Content="Пароль" Margin="0,0,0,50"/>
        <TextBox x:Name="password" Grid.Row="2" Height="30" Width="200" VerticalContentAlignment="Center"/>
        
        <Button Grid.Row="3" Height="30" Width="200" Content="Войти" Background="Transparent" Click="Button_Click"/>
        
    </Grid>
</Window>
